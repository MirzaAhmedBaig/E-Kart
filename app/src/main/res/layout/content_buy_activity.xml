<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buying_layout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <TextView
                android:id="@+id/user_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:text="User Details"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:textStyle="bold"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

        <EditText
                android:id="@+id/u_name_firs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="@string/first_name"
                android:maxLines="1"
                android:selectAllOnFocus="false"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/u_name_last"
                android:layout_marginEnd="4dp" app:layout_constraintTop_toBottomOf="@+id/user_details"/>
        <EditText
                android:id="@+id/u_name_last"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="@string/last_name"
                android:maxLines="1"
                android:selectAllOnFocus="false"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/u_name_firs"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@+id/user_details"/>

        <View
                android:id="@+id/vx"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/hint_color"
                app:layout_constraintStart_toStartOf="@+id/u_name_firs"
                app:layout_constraintEnd_toEndOf="@+id/u_name_firs"
                app:layout_constraintTop_toBottomOf="@+id/u_name_firs" android:layout_marginTop="8dp"/>

        <View
                android:id="@+id/vx1"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/hint_color"
                app:layout_constraintStart_toStartOf="@+id/u_name_last"
                app:layout_constraintEnd_toEndOf="@+id/u_name_last"
                app:layout_constraintTop_toBottomOf="@+id/u_name_last" android:layout_marginTop="8dp"/>

        <TextView
                android:id="@+id/dob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="Date of Birth"
                android:maxLines="1"
                android:selectAllOnFocus="false"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/vx" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/gender"/>

        <View
                android:id="@+id/vx2"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/hint_color"
                app:layout_constraintStart_toStartOf="@+id/u_name_firs"
                app:layout_constraintEnd_toEndOf="@+id/dob"
                app:layout_constraintTop_toBottomOf="@+id/dob" android:layout_marginTop="8dp"
        />

        <Spinner
                android:id="@+id/gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_regular"
                android:gravity="end"
                android:textAlignment="textEnd"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/dob" app:layout_constraintTop_toTopOf="@+id/dob"
                app:layout_constraintStart_toEndOf="@+id/dob" android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.5"/>

        <EditText
                android:id="@+id/current_address"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="Current Address"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:padding="5dp"
                android:background="@drawable/border_view"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vx2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>


        <CheckBox
                android:text="Same as current address?"
                android:id="@+id/address_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/current_address"/>

        <EditText
                android:id="@+id/permanent_address"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="Permanent Address"
                android:padding="5dp"
                android:background="@drawable/border_view"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/address_checkbox"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>


        <Spinner
                android:id="@+id/pin_codes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_regular"
                android:gravity="end"
                android:textAlignment="textEnd"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                app:layout_constraintTop_toBottomOf="@+id/permanent_address"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/residence_type"
        />
        <Spinner
                android:id="@+id/residence_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_regular"
                android:gravity="end"
                android:textAlignment="textEnd"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/permanent_address"
                android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/pin_codes"
                app:layout_constraintHorizontal_bias="0.5"/>

        <EditText
                android:id="@+id/u_aadhaar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="Aadhaar Card Number"
                android:maxLines="1"
                android:inputType="number"
                android:selectAllOnFocus="false"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/pin_codes" app:layout_constraintStart_toStartOf="parent"/>

        <View
                android:id="@+id/vx5"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/hint_color"
                app:layout_constraintStart_toStartOf="@+id/u_name_firs"
                app:layout_constraintEnd_toEndOf="@+id/u_name_last"
                app:layout_constraintTop_toBottomOf="@+id/u_aadhaar" android:layout_marginTop="8dp"/>

        <EditText
                android:id="@+id/u_pan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="Pan Card Number"
                android:maxLines="1"
                android:inputType="number"
                android:selectAllOnFocus="false"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vx5" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

        <View
                android:id="@+id/vx6"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/hint_color"
                app:layout_constraintStart_toStartOf="@+id/u_name_firs"
                app:layout_constraintEnd_toEndOf="@+id/u_name_last"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/u_pan"/>
        <Spinner
                android:id="@+id/empolyement_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_regular"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                app:layout_constraintTop_toBottomOf="@+id/vx6"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>


        <EditText
                android:id="@+id/company_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="Company Name if any"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/empolyement_type"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

        <View
                android:id="@+id/vx7"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/hint_color"
                app:layout_constraintStart_toStartOf="@+id/u_name_firs"
                app:layout_constraintEnd_toEndOf="@+id/u_name_last"
                app:layout_constraintTop_toBottomOf="@+id/company_name" android:layout_marginTop="8dp"/>

        <EditText
                android:id="@+id/monthly_income"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="Gross Monthly Income"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vx7" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/annual_income" android:layout_marginEnd="4dp"/>

        <EditText
                android:id="@+id/annual_income"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="Annual Income"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vx7"
                android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/monthly_income"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="4dp"/>

        <View
                android:id="@+id/vx8"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/hint_color"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/monthly_income"
                app:layout_constraintEnd_toEndOf="@+id/monthly_income"
                app:layout_constraintStart_toStartOf="@+id/monthly_income"/>
        <View
                android:id="@+id/vx9"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/hint_color"
                app:layout_constraintEnd_toEndOf="@+id/annual_income" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/annual_income"
                app:layout_constraintStart_toStartOf="@+id/annual_income"/>

        <TextView
                android:id="@+id/family_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:text="Family and Guarantor Details"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:textStyle="bold"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vx8" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

        <EditText
                android:id="@+id/family_member_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="Family Member Name"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/family_details" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

        <View
                android:id="@+id/vx10"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/hint_color"
                app:layout_constraintStart_toStartOf="@+id/family_member_name"
                app:layout_constraintEnd_toEndOf="@+id/family_member_name"
                app:layout_constraintTop_toBottomOf="@+id/family_member_name" android:layout_marginTop="8dp"/>


        <EditText
                android:id="@+id/family_member_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="Family Member Mobile Number"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vx10" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

        <View
                android:id="@+id/vx11"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/hint_color"
                app:layout_constraintStart_toStartOf="@+id/family_member_number"
                app:layout_constraintEnd_toEndOf="@+id/family_member_number"
                app:layout_constraintTop_toBottomOf="@+id/family_member_number" android:layout_marginTop="8dp"/>


        <EditText
                android:id="@+id/guarantor_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="Guarantor Name"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vx11" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

        <View
                android:id="@+id/vx12"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/hint_color"
                app:layout_constraintStart_toStartOf="@+id/guarantor_name"
                app:layout_constraintEnd_toEndOf="@+id/guarantor_name"
                app:layout_constraintTop_toBottomOf="@+id/guarantor_name" android:layout_marginTop="8dp"/>


        <EditText
                android:id="@+id/guarantor_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="Guarantor Mobile Number"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vx12" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

        <View
                android:id="@+id/vx13"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/hint_color"
                app:layout_constraintStart_toStartOf="@+id/guarantor_number"
                app:layout_constraintEnd_toEndOf="@+id/guarantor_number"
                app:layout_constraintTop_toBottomOf="@+id/guarantor_number" android:layout_marginTop="8dp"/>
        <EditText
                android:id="@+id/referral_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:hint="Referral Code if any"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vx13" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>
        <View
                android:id="@+id/vx14"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/hint_color"
                app:layout_constraintStart_toStartOf="@+id/referral_code"
                app:layout_constraintEnd_toEndOf="@+id/referral_code"
                app:layout_constraintTop_toBottomOf="@+id/referral_code" android:layout_marginTop="8dp"/>

        <TextView
                android:id="@+id/documents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:text="Documents"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:textStyle="bold"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/vx14" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

        <TextView
                android:id="@+id/aadhaar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:text="Take image of Aadhaar card"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/documents" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

        <ImageView
                android:id="@+id/aadhaar_card"
                android:layout_width="100dp"
                android:src="@drawable/ic_image"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/aadhaar_text" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

        <TextView
                android:id="@+id/pan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/avenir_next_regular"
                android:text="Take image of Pan card"
                android:selectAllOnFocus="false"
                android:gravity="start"
                android:textColor="@color/text_color_black"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/text_size"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/aadhaar_card" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

        <ImageView
                android:id="@+id/pan_card"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_image"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/pan_text" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

        <Button
                android:id="@+id/login_ok"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/avenir_next_medium"
                android:text="@string/submit"
                android:textColor="@color/buttons_secondary_text_color"
