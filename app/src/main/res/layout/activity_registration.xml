<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/register_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/selected_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/avenir_next_regular"
            android:gravity="center"
            android:text="Create an Account"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/sub_title_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
            android:contentDescription="@string/image"
            android:id="@+id/u_name_firs_pic"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/selected_title"/>


    <EditText
            android:id="@+id/u_name_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:fontFamily="@font/avenir_next_regular"
            android:hint="@string/first_name"
            android:maxLines="1"
            android:inputType="text"
            android:maxLength="200"
            android:selectAllOnFocus="false"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/text_size"
            android:nextFocusForward="@id/u_name_last"
            app:layout_constraintStart_toEndOf="@+id/u_name_firs_pic"
            app:layout_constraintTop_toTopOf="@+id/u_name_firs_pic"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="@+id/u_name_firs_pic"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/u_name_last"/>
    <EditText
            android:id="@+id/u_name_last"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:fontFamily="@font/avenir_next_regular"
            android:hint="@string/last_name"
            android:maxLines="1"
            android:maxLength="200"
            android:inputType="text"
            android:selectAllOnFocus="false"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/text_size"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/u_name_firs_pic"
            app:layout_constraintBottom_toBottomOf="@+id/u_name_firs_pic"
            app:layout_constraintStart_toEndOf="@+id/u_name_first" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5"/>

    <View
            android:id="@+id/vx"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/hint_color"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/u_name_first" app:layout_constraintEnd_toEndOf="@+id/u_name_first"
            app:layout_constraintStart_toStartOf="@+id/u_name_first"/>

    <View
            android:id="@+id/vxx2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/hint_color"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/u_name_first" app:layout_constraintEnd_toEndOf="@+id/u_name_last"
            app:layout_constraintStart_toStartOf="@+id/u_name_last"/>


    <ImageView
            android:contentDescription="@string/image"
            android:id="@+id/u_id_pic"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_mail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/vx"/>


    <EditText
            android:id="@+id/u_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:fontFamily="@font/avenir_next_regular"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:selectAllOnFocus="false"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/text_size"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/u_id_pic"
            app:layout_constraintTop_toTopOf="@+id/u_id_pic"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="@+id/u_id_pic"/>

    <View
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/hint_color"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/u_email" app:layout_constraintEnd_toEndOf="@+id/u_email"
            app:layout_constraintStart_toStartOf="@+id/u_id_pic"/>

    <ImageView
            android:contentDescription="@string/image"
            android:id="@+id/pass_pic"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:rotation="45"
            android:src="@drawable/ic_password" app:layout_constraintTop_toBottomOf="@+id/v1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"/>

    <EditText
            android:id="@+id/u_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/pass_pic"
            android:background="@color/transparent"
            android:fontFamily="@font/avenir_next_regular"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/text_size"
            app:layout_constraintTop_toTopOf="@+id/pass_pic"
            app:layout_constraintBottom_toBottomOf="@+id/pass_pic" app:layout_constraintStart_toEndOf="@+id/pass_pic"
            app:layout_constraintEnd_toEndOf="@+id/v1" android:layout_marginStart="16dp"
    />

    <Button android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/show_password"
            android:fontFamily="@font/avenir_next_regular"
            android:text="@string/show"
            android:background="@null"
            android:textAllCaps="false"
            android:textColor="@color/app_background_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/u_password"
            app:layout_constraintBottom_toBottomOf="@+id/u_password" android:layout_marginEnd="8dp"/>

    <View
            android:id="@+id/v2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/hint_color"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/u_password" app:layout_constraintStart_toStartOf="@+id/pass_pic"
            app:layout_constraintEnd_toEndOf="@+id/u_password"/>

    <ImageView
            android:contentDescription="@string/image"
            android:id="@+id/mob_pic"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person" app:layout_constraintTop_toBottomOf="@+id/v2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"/>

    <EditText
            android:id="@+id/u_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/pass_pic"
            android:background="@color/transparent"
            android:fontFamily="@font/avenir_next_regular"
            android:hint="@string/mobile_number"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/text_size"
            android:maxLength="10"
            app:layout_constraintTop_toTopOf="@+id/mob_pic"
            app:layout_constraintBottom_toBottomOf="@+id/mob_pic" app:layout_constraintStart_toEndOf="@+id/mob_pic"
            app:layout_constraintEnd_toEndOf="@+id/v2" android:layout_marginStart="16dp"
    />

    <View
            android:id="@+id/v2x"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/hint_color"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/u_number" app:layout_constraintStart_toStartOf="@+id/mob_pic"
            app:layout_constraintEnd_toEndOf="@+id/u_number"/>


    <ImageView
            android:contentDescription="@string/image"
            android:id="@+id/otp_pic"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_lock" app:layout_constraintTop_toBottomOf="@+id/v2x"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"/>

    <EditText
            android:id="@+id/u_otp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/pass_pic"
            android:background="@color/transparent"
            android:fontFamily="@font/avenir_next_regular"
            android:hint="@string/otp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="6"
            android:enabled="false"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/text_size"
            app:layout_constraintTop_toTopOf="@+id/otp_pic"
            app:layout_constraintBottom_toBottomOf="@+id/otp_pic" app:layout_constraintStart_toEndOf="@+id/otp_pic"
            app:layout_constraintEnd_toEndOf="@+id/v2" android:layout_marginStart="16dp"
    />

    <Button android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/request_otp"
            android:fontFamily="@font/avenir_next_regular"
            android:text="@string/request_otp"
            android:background="@null"
            android:textAllCaps="false"
            android:textColor="@color/app_background_end"
            app:layout_constraintEnd_toEndOf="@+id/u_otp"
            app:layout_constraintTop_toTopOf="@+id/u_otp"
            app:layout_constraintBottom_toBottomOf="@+id/u_otp"/>


    <View
            android:id="@+id/v2xx"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/hint_color"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/u_otp" app:layout_constraintStart_toStartOf="@+id/otp_pic"
            app:layout_constraintEnd_toEndOf="@+id/u_otp"/>

    <ImageView
            android:contentDescription="@string/image"
            android:id="@+id/u_refere_pic"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_refer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@+id/v2xx" android:layout_marginTop="16dp"/>
    <EditText
            android:id="@+id/u_reference_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:fontFamily="@font/avenir_next_regular"
            android:hint="@string/referece_code"
            android:maxLines="1"
            android:inputType="text"
            android:maxLength="6"
            android:selectAllOnFocus="false"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/text_size"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/u_id_pic"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/u_refere_pic"
            app:layout_constraintBottom_toBottomOf="@+id/u_refere_pic"/>
    <View
            android:id="@+id/v2xxs"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/hint_color"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/u_reference_code"
            app:layout_constraintStart_toStartOf="@+id/u_refere_pic"
            app:layout_constraintEnd_toEndOf="@+id/u_reference_code" android:layout_marginStart="8dp"/>


    <Button
            android:id="@+id/register_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/avenir_next_medium"
            android:text="@string/register"
            android:textColor="@color/buttons_secondary_text_color"
            android:textSize="@dimen/button_text"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/u_password"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/pass_pic"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/v2xxs"/>

    <View
            android:id="@+id/v3"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/hint_color"
            app:layout_constraintTop_toBottomOf="@+id/register_btn" app:layout_constraintStart_toStartOf="@+id/pass_pic"
            app:layout_constraintEnd_toEndOf="@+id/u_password" android:layout_marginTop="50dp"/>

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="1dp"
            android:src="@drawable/white_rounded_view"
            app:layout_constraintTop_toTopOf="@+id/v3"
            app:layout_constraintBottom_toBottomOf="@+id/v3"
            app:layout_constraintEnd_toEndOf="@+id/v3"
            app:layout_constraintStart_toStartOf="@+id/v3" android:id="@+id/imageView2"/>

    <TextView
            android:id="@+id/or_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:fontFamily="@font/avenir_next_medium"
            android:text="OR"
            android:gravity="center"
            android:textColor="@color/hint_color"
            android:textSize="13sp"
            android:textStyle=""
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"/>

    <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:fontFamily="@font/avenir_next_medium"
            android:text="@string/already_have_a_account_login_here"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/normal_text"
            android:textStyle=""
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginTop="32dp"/>
</android.support.constraint.ConstraintLayout>
